@model UserCreateModel
@{
    Layout = "_Layout";
}
<div class="mt-4">
    <form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
         <div class="mb-3">
            <label>Adınız: </label>
            <input  asp-for="@Model.Firstname" class="form-control"/>
        </div>
        <div class="mb-3">
            <label>Soyadınız: </label>
            <input asp-for="@Model.Surname" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Telefon Numaranız: </label>
            <input asp-for="@Model.PhoneNumber" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Kullanıcı Adınız: </label>
            <input asp-for="@Model.Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Şifreniz: </label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Şifreniz Tekrar: </label>
            <input type="password" asp-for="@Model.PasswordConfirm" class="form-control" />
        </div>
        <div class="mb-3">
            <select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
                <option value="0">Bir Cinsiyet Seçiniz</option>
            </select>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Yeni Kullanıcı Ekle</button>
        </div>
        <div class="mb-3 text-danger" asp-validation-summary="All">
            
        </div>
    </form>
</div>